// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "active_pane_modifiers": {
    "magnification": 1,
    "inactive_opacity": 0.5
  },
  "buffer_font_size": 14,
  "buffer_font_family": "Comic Code",
  "ui_font_family": "Comic Code",
  "ui_font_size": 14,
  "format_on_save": "on",
  "relative_line_numbers": false,
  "tab_size": 2,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": { "file_icons": true },
  "scrollbar": {
    "show": "never"
  },
  "terminal": {
    "dock": "bottom",
    "button": false,
    "font_size": 14
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "button": true
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right",
    "button": false,
    "indent_guides": {
      "show": "never"
    },
    "scrollbar": {
      "show": "never"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "languages": {
    "Ruby": {
      "tab_size": 2,
      "format_on_save": "on",
      "language_servers": ["ruby-lsp", "!solargraph", "..."],
      "formatter": {
        "external": {
          "command": "./bin/rubocop",
          "arguments": [
            "--fail-level",
            "error",
            "--auto-correct",
            "--stdin",
            "{buffer_path}",
            "--stderr",
            "--server"
          ]
        }
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "format_on_save": "off"
    }
  }
}
