[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-k cmd-left": ["workspace::ActivatePaneInDirection", "Left"],
      "cmd-k cmd-right": ["workspace::ActivatePaneInDirection", "Right"],
      "cmd-k cmd-up": ["workspace::ActivatePaneInDirection", "Up"],
      "cmd-k cmd-down": ["workspace::ActivatePaneInDirection", "Down"],
      "cmd-k cmd-h": ["workspace::ActivatePaneInDirection", "Left"],
      "cmd-k cmd-l": ["workspace::ActivatePaneInDirection", "Right"],
      "cmd-k cmd-j": ["workspace::ActivatePaneInDirection", "Down"],
      "cmd-k cmd-k": ["workspace::ActivatePaneInDirection", "Up"]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "alt-shift-j": "editor::SelectLargerSyntaxNode",
      "alt-shift-k": "editor::SelectSmallerSyntaxNode"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "cmd-k up": "pane::SplitUp",
      "cmd-k down": "pane::SplitDown",
      "cmd-k left": "pane::SplitLeft",
      "cmd-k right": "pane::SplitRight",
      "cmd-k k": "pane::SplitUp",
      "cmd-k j": "pane::SplitDown",
      "cmd-k h": "pane::SplitLeft",
      "cmd-k l": "pane::SplitRight"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-n": "workspace::NewTerminal"
    }
  }
]
